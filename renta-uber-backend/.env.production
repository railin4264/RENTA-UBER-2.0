# Production Environment Configuration
NODE_ENV=production

# Database
DATABASE_URL="postgresql://renta_uber_user:renta_uber_password@production-db-host:5432/renta_uber_db"

# JWT
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
FRONTEND_URL=https://renta-uber.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
SESSION_SECRET="your-super-secure-session-secret-key-change-this-in-production"
CORS_ORIGIN=https://renta-uber.com

# Logging
LOG_LEVEL=info

# Redis (for caching and sessions)
REDIS_URL=redis://redis-host:6379

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@renta-uber.com
SMTP_PASS=your-app-password

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Backup
BACKUP_S3_BUCKET=renta-uber-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5